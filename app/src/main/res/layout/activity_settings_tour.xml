<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oppous.anarko.SettingsTourActivity">

    <VideoView
        android:id="@+id/activity_tour_videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAKNoAlpha"
        />

    <com.oppous.anarko.classes.AKTextView
        android:id="@+id/activity_tour_btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="30dp"
        android:text="CLOSE"
        android:textColor="@color/colorAKButton"
        android:textSize="@dimen/textsize_44pt"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:onClick="onSkipTourVideo"
        app:font_name="@string/font_gunplay" />

</FrameLayout>
