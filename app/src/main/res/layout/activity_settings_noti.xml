<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAKBackground"
    tools:context="com.oppous.anarko.SettingsNotiActivity">

    <!-- Top Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/btn_back"
            android:onClick="onBack" />

        <com.oppous.anarko.classes.AKTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/notifications_title"
            android:textAlignment="center"
            android:textSize="@dimen/textsize_22"
            android:textColor="@color/colorAKText"
            android:shadowColor="@color/colorAKShadow"
            android:shadowRadius="10"
            app:font_name="@string/font_roboto"/>

        <com.oppous.anarko.classes.AKTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAKButton"
            android:text="@string/top_done"
            android:textSize="@dimen/textsize_20"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30px"
            android:shadowColor="@color/colorAKShadow"
            android:shadowRadius="10"
            app:font_name="@string/font_gunplay"/>

    </FrameLayout>

    <!-- ListView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <!-- First Item-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications_audio"
                    android:textColor="@color/colorAKText"
                    android:textSize="@dimen/textsize_18"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="30px"
                    android:shadowColor="@color/colorAKShadow"
                    android:shadowRadius="10"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:contextClickable="false"
                    android:clickable="true"
                    android:checked="true"
                    android:buttonTint="@color/colorAKButton"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorAKButtonDisable"
                    android:layout_gravity="bottom"
                    android:shadowColor="@color/colorAKShadow"
                    android:shadowRadius="10"/>

            </FrameLayout>

            <!-- Second Item-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications_comment"
                    android:textColor="@color/colorAKText"
                    android:textSize="@dimen/textsize_18"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="30px"
                    android:shadowColor="@color/colorAKShadow"
                    android:shadowRadius="10"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:contextClickable="false"
                    android:clickable="true"
                    android:checked="true"
                    android:buttonTint="@color/colorAKButton"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorAKButtonDisable"
                    android:layout_gravity="bottom"
                    android:shadowColor="@color/colorAKShadow"
                    android:shadowRadius="10"/>

            </FrameLayout>

            <!-- Third Item-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications_all"
                    android:textColor="@color/colorAKText"
                    android:textSize="@dimen/textsize_18"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="30px"
                    android:shadowColor="@color/colorAKShadow"
                    android:shadowRadius="10"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:contextClickable="false"
                    android:clickable="true"
                    android:checked="true"
                    android:buttonTint="@color/colorAKButton"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorAKButtonDisable"
                    android:layout_gravity="bottom"
                    android:shadowColor="@color/colorAKShadow"
                    android:shadowRadius="10"/>

            </FrameLayout>

        </LinearLayout>


    </FrameLayout>

</LinearLayout>


