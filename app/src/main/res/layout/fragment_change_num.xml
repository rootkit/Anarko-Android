<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAKBackground"
    tools:context="com.oppous.anarko.fragments.ChangeNumFragment">

    <!-- Top Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.oppous.anarko.classes.AKTextView
            android:id="@+id/fragment_changeNum_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAKButton"
            android:text="@string/top_cancel"
            android:textSize="@dimen/textsize_42pt"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="30px"
            app:font_name="@string/font_gunplay"/>

        <com.oppous.anarko.classes.AKTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/changeNum_title"
            android:textAlignment="center"
            android:textSize="@dimen/textsize_22"
            android:textColor="@color/colorAKText"
            android:layout_gravity="center"
            />

        <com.oppous.anarko.classes.AKTextView
            android:id="@+id/fragment_changeNum_btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAKButton"
            android:text="@string/top_done"
            android:textSize="@dimen/textsize_42pt"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30px"
            app:font_name="@string/font_gunplay"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.oppous.anarko.classes.AKTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/changeNum_content4"
                    android:textColor="@color/colorAKText"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="120dp"
                    app:font_name="@string/font_roboto"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="50dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="@dimen/textsize_42pt"
                        android:textAlignment="center"
                        android:textColor="@color/colorAKText"
                        android:layout_marginTop="7dp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="58"
                        android:textSize="@dimen/textsize_42pt"
                        android:inputType="phone"
                        android:id="@+id/fragment_changeNum_txtCountryCodeOld"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorAKText"
                        android:backgroundTint="@color/colorAKLightGrey"
                        />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text=""
                        android:textSize="@dimen/textsize_42pt"
                        android:inputType="phone"
                        android:id="@+id/fragment_changeNum_txtPhoneNumberOld"
                        android:textColor="@color/colorAKText"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorAKLightGrey"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_changeNum_iconCheckOld"
                        android:src="@mipmap/icon_correct"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.oppous.anarko.classes.AKTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/changeNum_content5"
                    android:textColor="@color/colorAKText"
                    android:textAlignment="center"
                    app:font_name="@string/font_roboto"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:layout_marginTop="50dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="@dimen/textsize_42pt"
                        android:textAlignment="center"
                        android:textColor="@color/colorAKText"
                        android:layout_marginTop="7dp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="58"
                        android:textSize="@dimen/textsize_42pt"
                        android:inputType="phone"
                        android:id="@+id/fragment_changeNum_txtCountryCodeNew"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorAKText"
                        android:backgroundTint="@color/colorAKLightGrey"
                        />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text=""
                        android:textSize="@dimen/textsize_42pt"
                        android:inputType="phone"
                        android:id="@+id/fragment_changeNum_txtPhoneNumberNew"
                        android:textColor="@color/colorAKText"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorAKLightGrey"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_changeNum_iconCheckNew"
                        android:src="@mipmap/icon_correct"
                        android:layout_marginTop="15dp"
                        />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
