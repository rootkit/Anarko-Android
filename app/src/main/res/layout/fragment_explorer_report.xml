<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oppous.anarko.fragments.ExplorerReportFragment"
    android:background="@color/colorAKBackgroundTrans">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_cancel"
            android:id="@+id/fragment_report_btn_cancel"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/colorAKButton"
            android:textSize="@dimen/textsize_18"
            android:background="@color/colorAKNoAlpha"
            android:gravity="left|center_vertical"
            android:shadowColor="@color/colorAKShadow"
            android:shadowRadius="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize_18"
            android:textColor="@color/colorAKText"
            android:text="@string/report_title"
            android:id="@+id/fragment_report_label_title"
            android:shadowColor="@color/colorAKShadow"
            android:shadowRadius="10"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_send"
            android:id="@+id/fragment_report_btn_send"
            android:layout_gravity="center_vertical|right"
            android:textColor="@color/colorAKButton"
            android:textSize="@dimen/textsize_18"
            android:background="@color/colorAKNoAlpha"
            android:gravity="center_vertical|right"
            android:shadowColor="@color/colorAKShadow"
            android:shadowRadius="10"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="70dp"
        android:id="@+id/scrollView3" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.oppous.anarko.classes.AKRadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/fragment_report_radioGroup">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/report_content1"
                        android:id="@+id/textView19"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/colorAKText"
                        android:shadowColor="@color/colorAKShadow"
                        android:shadowRadius="10"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_report_sexual"
                        android:layout_gravity="center_vertical|right"
                        android:buttonTint="@color/colorAKButton" />

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAKLineGrey"></LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/report_content2"
                        android:id="@+id/textView20"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/colorAKText"
                        android:shadowColor="@color/colorAKShadow"
                        android:shadowRadius="10"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_report_violent"
                        android:layout_gravity="center_vertical|right"
                        android:buttonTint="@color/colorAKButton" />

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAKLineGrey"></LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/report_content3"
                        android:id="@+id/textView21"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/colorAKText"
                        android:shadowColor="@color/colorAKShadow"
                        android:shadowRadius="10"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_report_hateful"
                        android:layout_gravity="center_vertical|right"
                        android:buttonTint="@color/colorAKButton" />

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAKLineGrey"></LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/report_content4"
                        android:id="@+id/textView22"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/colorAKText"
                        android:shadowColor="@color/colorAKShadow"
                        android:shadowRadius="10"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_report_harmful"
                        android:layout_gravity="center_vertical|right"
                        android:buttonTint="@color/colorAKButton" />

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAKLineGrey"></LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/report_content5"
                        android:id="@+id/textView23"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/colorAKText"
                        android:shadowColor="@color/colorAKShadow"
                        android:shadowRadius="10"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_report_child"
                        android:layout_gravity="center_vertical|right"
                        android:buttonTint="@color/colorAKButton" />

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAKLineGrey"></LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/report_content6"
                        android:id="@+id/textView24"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/colorAKText"
                        android:shadowColor="@color/colorAKShadow"
                        android:shadowRadius="10"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_report_spam"
                        android:layout_gravity="center_vertical|right"
                        android:buttonTint="@color/colorAKButton" />

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAKLineGrey"></LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/report_content7"
                        android:id="@+id/textView25"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/colorAKText"
                        android:shadowColor="@color/colorAKShadow"
                        android:shadowRadius="10"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_report_other"
                        android:layout_gravity="center_vertical|right"
                        android:buttonTint="@color/colorAKButton" />

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAKLineGrey"></LinearLayout>

            </com.oppous.anarko.classes.AKRadioGroup>


        </FrameLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_terms"
            android:id="@+id/fragment_report_label_terms"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/colorAKTextGreyDark"
            android:layout_gravity="bottom"
            android:shadowColor="@color/colorAKShadow"
            android:shadowRadius="10"/>

    </FrameLayout>

</FrameLayout>
