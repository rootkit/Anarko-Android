<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="AKTextView">
        <attr name="font_name" format="string"/>
    </declare-styleable>

    <declare-styleable name="switchButton">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="sw_textArray" format="string" />
        <attr name="sw_switchCount" format="integer" />
        <attr name="sw_ThemeStyle" format="reference" />
        <attr name="sw_CornerRadius" format="dimension" />
        <attr name="sw_checkedColor" format="color|reference" />
        <attr name="sw_unCheckedColor" format="color|reference" />
        <attr name="sw_strokeColor" format="color|reference" />
        <attr name="sw_strokeWidth" format="dimension" />
    </declare-styleable>

    <!-- AKProgressBar -->
    <declare-styleable name="AKProgressBar">
        <attr name="pbTitle" format="string" />
        <attr name="pbContent" format="string" />
        <attr name="pbTitleTextColor" format="color" />
        <attr name="pbTitleTextSize" format="dimension" />
        <attr name="pbContentTextColor" format="color" />
        <attr name="pbContentTextSize" format="dimension"/>
        <attr name="pbBarColor" format="color" />
        <attr name="pbRimColor" format="color" />
        <attr name="pbRimWidth" format="dimension" />
        <attr name="pbSpinSpeed" format="dimension" />
        <attr name="pbDelayMillis" format="integer" />
        <attr name="pbCircleColor" format="color" />
        <attr name="pbRadius" format="dimension" />
        <attr name="pbBarWidth" format="dimension" />
        <attr name="pbBarLength" format="dimension" />
        <attr name="pbContourColor" format="color"/>
        <attr name="pbContourSize" format="dimension"/>
        <attr name="pbDrawable" format="integer"/>
    </declare-styleable>

    <!-- Credit Card -->
    <declare-styleable name="CreditCardForm">
        <attr name="include_exp"        format="boolean"/>
        <attr name="include_security"   format="boolean"/>
        <attr name="include_zip"        format="boolean"/>
        <attr name="include_helper"     format="boolean"/>

        <attr name="helper_text_color"  format="color"/>
        <attr name="text_color"         format="color"/>
        <attr name="hint_text_color"    format="color"/>
        <attr name="cursor_color"       format="color"/>
        <attr name="card_number_hint"   format="string"/>
        <attr name="input_background"   format="reference"/>
        <attr name="default_text_colors" format="boolean"/>
        <attr name="animate_on_error"   format="boolean"/>
    </declare-styleable>

    <!-- Animate Text -->
    <declare-styleable name="HTextView">
        <attr name="isAnimate" format="boolean"/>
        <attr name="animateType" format="enum">
            <enum name="scale" value="0"/>
            <enum name="evaporate" value="1"/>
            <enum name="fall" value="2"/>
            <enum name="sparkle" value="3"/>
            <enum name="anvil" value="4"/>
            <enum name="line" value="5"/>
            <enum name="pixelate" value="6"/>
            <enum name="typer" value="7"/>
            <enum name="rainbow" value="8"/>
        </attr>
        <attr name="fontAsset" format="string"/>
    </declare-styleable>

    <!-- RecyclerView -->
    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
    </declare-styleable>


    <!-- CircleProgress -->
    <declare-styleable name="CircleProgress">
        <attr name="circle_progress" format="integer"/>
        <attr name="circle_max" format="integer"/>

        <attr name="circle_unfinished_color" format="color"/>
        <attr name="circle_finished_color" format="color"/>

        <attr name="circle_text_size" format="dimension"/>
        <attr name="circle_text_color" format="color"/>

        <attr name="circle_prefix_text" format="string"/>
        <attr name="circle_suffix_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="DonutProgress">
        <attr name="donut_progress" format="float"/>
        <attr name="donut_max" format="integer"/>

        <attr name="donut_unfinished_color" format="color"/>
        <attr name="donut_finished_color" format="color"/>

        <attr name="donut_finished_stroke_width" format="dimension"/>
        <attr name="donut_unfinished_stroke_width" format="dimension"/>

        <attr name="donut_text_size" format="dimension"/>
        <attr name="donut_text_color" format="color"/>

        <attr name="donut_prefix_text" format="string"/>
        <attr name="donut_suffix_text" format="string"/>
        <attr name="donut_text" format="string"/>

        <attr name="donut_background_color" format="color"/>

        <attr name="donut_inner_bottom_text" format="string"/>
        <attr name="donut_inner_bottom_text_size" format="dimension"/>
        <attr name="donut_inner_bottom_text_color" format="color"/>

        <attr name="donut_circle_starting_degree" format="integer" />
        <attr name="donut_show_text" format="boolean"/>
        <attr name="donut_inner_drawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ArcProgress">
        <attr name="arc_progress" format="integer"/>
        <attr name="arc_angle" format="float"/>
        <attr name="arc_stroke_width" format="dimension"/>
        <attr name="arc_max" format="integer"/>

        <attr name="arc_unfinished_color" format="color"/>
        <attr name="arc_finished_color" format="color"/>

        <attr name="arc_text_size" format="dimension"/>
        <attr name="arc_text_color" format="color"/>

        <attr name="arc_suffix_text" format="string"/>
        <attr name="arc_suffix_text_size" format="dimension"/>
        <attr name="arc_suffix_text_padding" format="dimension"/>

        <attr name="arc_bottom_text" format="string"/>
        <attr name="arc_bottom_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="circleProgressStyle" format="reference"/>
        <attr name="donutProgressStyle" format="reference"/>
        <attr name="arcProgressStyle" format="reference"/>
    </declare-styleable>

</resources>